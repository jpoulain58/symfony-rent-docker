{% extends 'base.html.twig' %}

{% block title %}Modifier mon profil{% endblock %}

{% block body %}
<div class="min-h-screen flex items-center justify-center bg-gray-100">
    <div class="bg-white p-8 rounded shadow-md w-full max-w-md">
        <h1 class="text-xl font-semibold text-gray-700 mb-4">Modifier mon profil</h1>

        {{ form_start(updateForm, {'attr': {'class': 'space-y-6'}}) }}
        {{ form_row(updateForm.firstname, {'attr': {'class': 'form-control p-2'}}) }}
        {{ form_row(updateForm.lastname, {'attr': {'class': 'form-control p-2'}}) }}
        {{ form_row(updateForm.email, {'attr': {'class': 'form-control p-2'}}) }}
        <button type="submit" 
            class="w-full bg-orange-600 text-white py-2 px-4 rounded-lg hover:bg-orange-700 focus:outline-none focus:ring-2 focus:ring-orange-500 focus:ring-offset-2">
            Sauvegarder
        </button>
        {{ form_end(updateForm) }}
    </div>
</div>
{% endblock %}