{% extends 'base.html.twig' %}

{% block title %}Édition du véhicule{% endblock %}

{% block body %}


<h1 class="text-2xl font-bold mb-4">Modifier le véhicule</h1>

<div class="bg-white p-4 rounded-lg shadow-md">
    {{ form_start(form) }}
    <div class="form-group position-relative">
        {{ form_label(form.registrationNumber) }}
        {{ form_widget(form.registrationNumber) }}
        <span class="edit-icon">✏️</span>
    </div>
    <div class="form-group position-relative">
        {{ form_label(form.year) }}
        {{ form_widget(form.year) }}
        <span class="edit-icon">✏️</span>
    </div>
    <div class="form-group position-relative">
        {{ form_label(form.isCanBeRent) }}
        {{ form_widget(form.isCanBeRent) }}
        <span class="edit-icon">✏️</span>
    </div>
    <div class="form-group position-relative">
        {{ form_label(form.price) }}
        {{ form_widget(form.price) }}
        <span class="edit-icon">✏️</span>
    </div>
    <div class="mt-4">
        <button class="bg-orange-600 text-white px-4 py-2 rounded-lg hover:bg-orange-800" type="submit">
            Enregistrer
        </button>
        <button class="delete-button" type="button" onclick="confirmDelete({{ car.id }})">
            Supprimer
        </button>
    </div>
    {{ form_end(form) }}
</div>

<script>
    function confirmDelete(carId) {
        if (confirm('Êtes-vous sûr de vouloir supprimer ce véhicule ?')) {
            window.location.href = '{{ path('admin_car_delete', { id: '__id__' }) }}'.replace('__id__', carId);
        }
    }
</script>

<style>
    .form-group {
        margin-bottom: 15px;
    }
    .form-group label {
        font-weight: bold;
    }
    .form-group input, .form-group select {
        border: 1px solid #ccc;
        padding: 8px;
        border-radius: 4px;
        width: 100%;
    }
    .form-group input:focus, .form-group select:focus {
        border-color: #ff9800;
        box-shadow: 0 0 5px rgba(255, 152, 0, 0.5);
    }
    .form-group .edit-icon {
        position: absolute;
        right: 10px;
        top: 50%;
        transform: translateY(-50%);
        color: #ff9800;
        cursor: pointer;
    }
    .form-group .edit-icon:hover {
        color: #e65100;
    }
    .delete-button {
        background-color: #ff4d4d;
        color: white;
        border: none;
        padding: 10px 20px;
        border-radius: 4px;
        cursor: pointer;
        margin-top: 10px;
    }
    .delete-button:hover {
        background-color: #ff1a1a;
    }
</style>
{% endblock %}
