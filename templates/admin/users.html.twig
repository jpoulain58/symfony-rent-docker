{% extends 'base.html.twig' %}

{% block title %}Liste des utilisateurs{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">

    <!-- Barre de recherche -->
    {% include 'components/searchbar.html.twig' with { route: 'admin_users', itemName: 'utilisateurs' } %}

    <!-- D√©tails de l'utilisateur s√©lectionn√© -->
    {% if selectedUser %}
        <div class="mb-4 bg-white p-4 rounded-lg">
            <div class="flex justify-between items-center mb-4">
                <h1 class="text-2xl font-bold text-orange-600">{{ selectedUser.email }}</h1>
                <div class="space-x-2">
                    <a class="text-orange-600 hover:text-orange-800">‚úèÔ∏è</a>
                    <a class="text-orange-600 hover:text-orange-800">üóëÔ∏è</a>
                </div>
            </div>
            <div class="w-full gap-2">
                <div class="flex justify-between items-center">
                    <p class="font-bold">Pr√©nom</p>
                    <p>{{ selectedUser.firstname }}</p>
                </div>
                <div class="flex justify-between items-center">
                    <p class="font-bold">Nom de famille</p>
                    <p>{{ selectedUser.lastname }}</p>
                </div>
                <div class="flex justify-between items-center">
                    <p class="font-bold">Nombre de r√©servations</p>
                    <p>{{ selectedUser.getReservations|length }}</p>
                </div>
            </div>
        </div>
    {% endif %}

    <!-- Tableau des utilisateurs -->
    <table class="min-w-full bg-white border border-gray-300 rounded-lg shadow-md">
        <thead>
            <tr class="bg-orange-600 text-white">
                <th class="px-4 py-2 text-left">Pr√©nom</th>
                <th class="px-4 py-2 text-left">Nom</th>
                <th class="px-4 py-2 text-left">Email</th>
            </tr>
        </thead>
        <tbody>
            {% for user in users %}
                <tr class="border-b border-gray-300 cursor-pointer {% if selectedUser and selectedUser.id == user.id %}bg-orange-100{% endif %}" onclick="window.location.href='{{ path('admin_users', { selected: user.id }) }}'">
                    <td class="px-4 py-2">{{ user.firstname }}</td>
                    <td class="px-4 py-2">{{ user.lastname }}</td>
                    <td class="px-4 py-2">{{ user.email }}</td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5" class="px-4 py-2 text-center text-gray-500">Aucun utilisateur trouv√©</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
