{% extends 'base.html.twig' %}

{% block title %}Liste des v√©hicules{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">

    {% set successMessages = app.flashes('success') %}
    {% set errorMessages = app.flashes('error') %}

    {% if successMessages %}
        <div class="bg-green-100 text-green-700 p-4 rounded">
            {{ successMessages|first }}
        </div>
    {% endif %}

    {% if errorMessages %}
        <div class="bg-red-100 text-red-700 p-4 rounded">
            {{ errorMessages|first }}
        </div>
    {% endif %}

    <twig:title title="Liste des v√©hicules" />

    <!-- Barre de recherche -->
    <div class="mb-4">
        <form method="get" action="{{ path('admin_cars') }}" class="flex">
            <input type="text" name="search" placeholder="Rechercher des v√©hicules..." 
                class="flex-grow p-2 border border-gray-300 rounded-lg focus:outline-none focus:ring focus:ring-orange-400" 
                value="{{ app.request.get('search')|default('') }}">
            <button type="submit" 
                class="ml-2 px-4 py-2 bg-orange-600 text-white rounded-lg hover:bg-orange-700 focus:outline-none focus:ring-2 focus:ring-orange-500">
                Recherche
            </button>
        </form>
    </div>

    <!-- D√©tails du v√©hicule s√©lectionn√© -->
    {% if selectedCar %}
        <div class="mb-4 bg-white p-4 rounded-lg">
            <div class="flex justify-between items-center mb-4">
                <h1 class="text-2xl font-bold text-orange-600">{{ selectedCar.getModel.name }}</h1>
                <div class="space-x-2">
                    <a class="text-orange-600 hover:text-orange-800">‚úèÔ∏è</a>
                    <a class="text-orange-600 hover:text-orange-800">üóëÔ∏è</a>
                </div>
            </div>
            <div class="w-full gap-2">
                <div class="flex justify-between items-center">
                    <p class="font-bold">Immatriculation</p>
                    <p>{{ selectedCar.registrationNumber }}</p>
                </div>
                <div class="flex justify-between items-center">
                    <p class="font-bold">Ann√©e de mise en circulation</p>
                    <p>{{ selectedCar.year }}</p>
                </div>
                <div class="flex justify-between items-center">
                    <p class="font-bold">Peux √™tre r√©serv√©</p>
                    <p>{{ selectedCar.isCanBeRent ? 'Oui' : 'Non' }}</p>
                </div>
                <div class="flex justify-between items-center">
                    <p class="font-bold">Prix par jour</p>
                    <p>A d√©finir</p>
                </div>
                <div class="flex justify-between items-center">
                    <p class="font-bold">Nombre de r√©servations</p>
                    <p>{{ selectedCar.getReservations|length }}</p>
                </div>
            </div>
        </div>
    {% endif %}

    <!-- Tableau des v√©hicules -->
    <table class="min-w-full bg-white border border-gray-300 rounded-lg shadow-md">
        <thead>
            <tr class="bg-orange-600 text-white">
                <th class="px-4 py-2 text-left">Mod√®le</th>
                <th class="px-4 py-2 text-left">Immatriculation</th>
            </tr>
        </thead>
        <tbody>
            {% for car in cars %}
            <tr class="border-b border-gray-300 cursor-pointer {% if selectedCar and selectedCar.id == car.id %}bg-orange-100{% endif %}" onclick="window.location.href='{{ path('admin_cars', { selected: car.id }) }}'">
                <td class="px-4 py-2">{{ car.getModel.name }}</td>
                <td class="px-4 py-2">{{ car.registrationNumber }}</td>
            </tr>
            {% else %}
            <tr>
                <td colspan="5" class="px-4 py-2 text-center text-gray-500">Aucun v√©hicule trouv√©</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
